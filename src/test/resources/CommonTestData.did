type http_header = record {
    name: text;
    value: text
};

type http_response = record {
    status: nat;
    headers: vec http_header;
    body: blob;
};

service: {
    http_request : (record {
        url : text;
        method : variant { get };
        headers: vec http_header;
        body : opt blob;
        transform : opt variant {
            function: func (http_response) -> (http_response) query
        };
    }) -> (http_response)
}