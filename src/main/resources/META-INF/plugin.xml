<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.alaanor.candid</id>
    <name>Candid</name>
    <vendor>Alaanor</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Candid file"
                  implementationClass="com.github.alaanor.candid.CandidFileType"
                  fieldName="INSTANCE"
                  language="Candid"
                  extensions="did"/>
        <lang.parserDefinition language="Candid" implementationClass="com.github.alaanor.candid.CandidParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Candid" implementationClass="com.github.alaanor.candid.highlight.CandidSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.github.alaanor.candid.highlight.CandidColorSettingsPage"/>
        <lang.refactoringSupport language="Candid" implementationClass="com.github.alaanor.candid.CandidRefactoringSupportProvider"/>
        <lang.findUsagesProvider language="Candid" implementationClass="com.github.alaanor.candid.CandidFindUsageProvider" />

        <localInspection language="Candid" implementationClass="com.github.alaanor.candid.inspection.CandidUnusedTypeInspection"
            level="WARNING" displayName="Unused type" enabledByDefault="true" groupName="Candid inspections"/>
    </extensions>
</idea-plugin>
